{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "scriptname": {
            "type": "enum",
            "options": [
                "---",
                "remote-mass-print",
                "dbox-folder-sync",
                "abbreviator-x",
                "quick-quote",
                "char-counter",
                "gravity-plugin",
                "sync-data",
                "bkstat"
            ],
            "style": {
                "---": null,
                "remote-mass-print": null,
                "dbox-folder-sync": null,
                "abbreviator-x": null,
                "quick-quote": null,
                "char-counter": null,
                "gravity-plugin": null,
                "sync-data": null,
                "bkstat": null
            },
            "default": "---",
            "maxLength": 100,
            "isCustom": true
        },
        "starttime": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 1,
            "isCustom": true
        },
        "endtime": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 1,
            "isCustom": true
        },
        "status": {
            "type": "enum",
            "options": [
                "---",
                "success",
                "error",
                "warning"
            ],
            "default": "---",
            "style": {
                "---": null,
                "success": null,
                "error": null,
                "warning": null
            },
            "maxLength": 100,
            "isCustom": true
        },
        "logcontent": {
            "type": "wysiwyg",
            "isCustom": true
        },
        "summary": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 300,
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    }
}