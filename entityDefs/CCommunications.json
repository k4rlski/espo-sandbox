{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "pattern": "$noBadCharacters"
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "template": {
            "type": "wysiwyg",
            "height": 600,
            "minHeight": 400,
            "isCustom": true
        },
        "type": {
            "type": "enum",
            "options": [
                "NA",
                "Quote",
                "Ad Placement",
                "SWA",
                "Evidence",
                "Customer Service",
                "Dispute",
                "Marketing",
                "Test",
                "Draft"
            ],
            "style": {
                "NA": null,
                "Quote": null,
                "Ad Placement": null,
                "SWA": null,
                "Evidence": null,
                "Customer Service": null,
                "Dispute": null,
                "Marketing": null,
                "Test": null,
                "Draft": null
            },
            "default": "NA",
            "maxLength": 100,
            "isCustom": true
        },
        "perm": {
            "type": "linkMultiple",
            "layoutDetailDisabled": true,
            "layoutMassUpdateDisabled": true,
            "layoutListDisabled": true,
            "noLoad": true,
            "importDisabled": true,
            "exportDisabled": true,
            "customizationDisabled": true,
            "isCustom": true
        },
        "wkflowphase": {
            "type": "enum",
            "style": {
                "NA": null,
                "Biz UI Acct": null,
                "Information": null,
                "Registration": null,
                "Verification": null,
                "Posting": null,
                "Evidence": null,
                "Explanation": null,
                "Up Selling": null
            },
            "maxLength": 100,
            "isCustom": true,
            "options": [
                "NA",
                "Biz UI Acct",
                "Information",
                "Registration",
                "Verification",
                "Posting",
                "Evidence",
                "Explanation",
                "Up Selling"
            ],
            "default": "Information"
        },
        "shortcoderefw": {
            "type": "wysiwyg",
            "minHeight": 300,
            "isCustom": true
        },
        "shortcoderef": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true,
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "perm": {
            "type": "hasMany",
            "foreign": "communications",
            "entity": "TESTPERM",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    }
}